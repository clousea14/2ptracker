<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FAEC1"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="05dp" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/TV_Username"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:hint=" UserName"
                android:textColorHint="@color/Black" />

            <TextView
                android:id="@+id/TV_Logout"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/TV_Empty"
                android:gravity="center_vertical|center_horizontal"
                android:text=" LOGOUT "
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/TV_Empty"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_Projectname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:hint=" Project Name: "
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/BTN_Edit"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@color/SteelBlue"
                android:gravity="center"
                android:text=" EDIT "
                android:textColor="@color/White" 
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="05dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/TV_Status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:hint=" Status:  "
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/BTN_InProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF9900"
                android:text="   InProgress   "
                android:textColor="@color/Black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/TV_begdt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:hint=" Begin Date: "
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/BT_Begdt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/TV_Enddt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="   End date   "
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/BT_Enddt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint=" TBD"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/TV_Status1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:hint=" send update notification "
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp" >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" TASKS "
                    android:textColor="@color/White"
                    android:background="#6ACA25"
                    android:textSize="20sp"/>
                 <ListView
                android:id="@+id/listView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:divider="@color/Black"
                android:dividerHeight="1dp"
                 >
            </ListView>
            </LinearLayout>

           
           
        </TableRow>
    </LinearLayout>

</LinearLayout>